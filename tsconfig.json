{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "target": "es2022",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.json",
    ],
    "exclude": [
        "node_modules",
        "package-lock.json",
        "tsconfig.json"
    ],
}
